{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    // "paths": {
    //   "@/*": ["./*"]
    // }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/remotion/stars/Composition.js", "src/remotion/stars/index.js", "src/remotion/stars/Root.js"],
  "exclude": ["node_modules"]
}
